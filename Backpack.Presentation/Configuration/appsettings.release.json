{
    "environment": "release",
    "Serilog": {
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "{LogPath}",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 60,
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Properties:j}] {Level:u} {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    }
}