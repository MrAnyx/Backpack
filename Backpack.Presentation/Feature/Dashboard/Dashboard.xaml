<UserControl x:Class="Backpack.Presentation.Feature.Dashboard.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Backpack.Presentation.Feature.Dashboard"
             xmlns:enum="clr-namespace:Backpack.Domain.Enum;assembly=Backpack.Domain"
             d:DataContext="{d:DesignInstance Type=local:DashboardVM}"
             mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="{Binding CountBackups}" />
        <Button Command="{Binding ExecuteStatusBarMessageCommand}" CommandParameter="{x:Static enum:eStatusBarMessageType.Error}">Error</Button>
        <Button Command="{Binding ExecuteStatusBarMessageCommand}" CommandParameter="{x:Static enum:eStatusBarMessageType.Info}">Info</Button>
        <Button Command="{Binding ExecuteStatusBarMessageCommand}" CommandParameter="{x:Static enum:eStatusBarMessageType.Loading}">Loading</Button>
        <Button Command="{Binding ExecuteStatusBarMessageCommand}" CommandParameter="{x:Static enum:eStatusBarMessageType.Success}">Success</Button>
        <Button Command="{Binding ExecuteStatusBarMessageCommand}" CommandParameter="{x:Static enum:eStatusBarMessageType.Warning}">Warning</Button>
    </StackPanel>
</UserControl>
