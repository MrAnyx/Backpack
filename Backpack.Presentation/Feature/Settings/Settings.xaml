<UserControl x:Class="Backpack.Presentation.Feature.Settings.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Backpack.Presentation.Feature.Settings"
             xmlns:shared="clr-namespace:Backpack.Shared;assembly=Backpack.Shared"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=local:SettingsVM}">

    <StackPanel Orientation="Vertical">
        <ComboBox ItemsSource="{Binding Languages}" SelectedItem="{Binding Language}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding NativeName, Converter={StaticResource TextInfoTitleCaseConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

    </StackPanel>
</UserControl>
