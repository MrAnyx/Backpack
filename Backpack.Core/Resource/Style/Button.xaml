        </Style.Setters>
    </Style>

    <Style x:Key="PrimaryFlatButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatDarkButton}"/>

    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatSecondaryDarkButton}"/>
</ResourceDictionary>